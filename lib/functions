info() {
  printf "  [ \033[00;34m..\033[0m ] $1\n"
}

success() {
  printf "  [ \033[00;32mOK\033[0m ] $1\n"
}

warn() {
  printf "  [\033[1;33mWARN\033[0m] $1\n"
}

fail() {
  (>&2 printf "  [\033[0;31mFAIL\033[0m] $1\n\n")
  exit 1
}

error() {
  (>&2 printf "\033[0;31m$1\033[0m\n")
}

abort() {
  error "$1"
  exit 1
}

user() {
  printf "  [ \033[0;33m??\033[0m ] $1 "
}

header() {
  printf "\n\033[04;33m✩✩✩✩ $1 ✩✩✩✩\033[0m\n"
}
