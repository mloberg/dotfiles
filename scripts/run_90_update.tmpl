#!/usr/bin/env fish

{{- if lookPath "op" }}
{{- $gh := set . "gh" "op plugin run -- gh" }}
{{- else }}
{{- $gh := set . "gh" "gh" }}
{{- end }}

# asdf
asdf plugin update --all

# plugins
fisher update

# gh extensions
{{ .gh }} extension upgrade --all

# completions
fish_update_completions

# Update timestamp of last update
touch ~/.update
