{
    // visuals
    "editor.fontFamily": "FiraCode Nerd Font",
    "editor.fontSize": 14,
    "editor.fontLigatures": true,
    "workbench.iconTheme": "vscode-icons", // `null` for no icons
    "vsicons.dontShowNewVersionMessage": true,
    "workbench.colorTheme": "Yoncé",
    "workbench.colorCustomizations": {
        "[Yoncé]": {
            "editorSuggestWidget.selectedBackground": "#FC438430"
        }
    },
    "explorer.openEditors.visible": 0,
    "workbench.activityBar.visible": false,
    // "workbench.editor.showTabs": false,
    "workbench.sideBar.location": "right",
    "workbench.statusBar.visible": false,
    "editor.minimap.enabled": false,
    "editor.rulers": [80,120],
    "window.zoomLevel": 0,

    // functionality
    "files.autoSave": "onWindowChange",
    "files.hotExit": "onExitAndWindowClose",

    // whitespace handling
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "diffEditor.ignoreTrimWhitespace": false,

    // language specific settings
    "editor.renameOnType": true,
    "go.useLanguageServer": true,
    "markdownlint.config": {
        "MD013": true,
        "MD046": false,
        "no-hard-tabs": true
    },
    "php.suggest.basic": false,
    "phpmd.rules": "~/.dotfiles/config/php/phpmd.xml",
    "terraform.indexing": {
        "enabled": false,
        "liveIndexing": false,
        "delay": 500,
        "exclude": [
            ".terraform/**/*",
            "**/.terraform/**/*"
        ]
    },
    "terraform.languageServer": {
        "external": true
    },

    // extension config
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressResultsExplorerNotice": false,
        "suppressShowKeyBindingsNotice": true
    },
    "gitlens.views.fileHistory.enabled": true,
    "gitlens.views.lineHistory.enabled": true,
    "peacock.favoriteColors": [
        {
            "name": "Angular Red",
            "value": "#b52e31"
        },
        {
            "name": "Auth0 Orange",
            "value": "#eb5424"
        },
        {
            "name": "Azure Blue",
            "value": "#007fff"
        },
        {
            "name": "C# Purple",
            "value": "#68217A"
        },
        {
            "name": "Gatsby Purple",
            "value": "#639"
        },
        {
            "name": "Go Cyan",
            "value": "#5dc9e2"
        },
        {
            "name": "Java Blue-Gray",
            "value": "#557c9b"
        },
        {
            "name": "JavaScript Yellow",
            "value": "#f9e64f"
        },
        {
            "name": "Mandalorian Blue",
            "value": "#1857a4"
        },
        {
            "name": "Node Green",
            "value": "#215732"
        },
        {
            "name": "React Blue",
            "value": "#00b3e6"
        },
        {
            "name": "Something Different",
            "value": "#832561"
        },
        {
            "name": "Vue Green",
            "value": "#42b883"
        }
    ],
    "todo-tree.highlights.enabled": true,
    "todo-tree.tree.showScanModeButton": false,
    "typescript.suggest.paths": false,
    "ecs.executablePath": "~/bin/ecs",
    "ecs.configPath": "~/.dotfiles/config/php/ecs.yaml",
    "commitizen.quoteMessageInGitCommit": false,

    // disable telemetry
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "intelephense.telemetry.enabled": false,
    "code-runner.enableAppInsights": false,
    "gitlens.advanced.telemetry.enabled": false,
    "partialDiff.enableTelemetry": false,
    "terraform.telemetry.enabled": false,
}
