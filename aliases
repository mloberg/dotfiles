alias k="clear"
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias -- -="cd -"

# Replace ls with exa (https://the.exa.website/)
if command -v exa &>/dev/null; then
  alias ls="exa --icons"
  alias ll="exa --icons --long --header --git"
  alias la="exa --icons --all"
  alias l="exa --icons --long --header --git --all"
  alias tree="exa --icons --tree --git-ignore"
fi

alias cat="bat"
alias grep="grep --color"

# Pipe my public key to my clipboard.
alias pubkey="more ~/.ssh/id_rsa.pub | pbcopy | echo '=> Public key copied to pasteboard.'"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# request confirmation
alias rm="rm -i"
alias cp="cp -i"
alias mv="mv -i"

# Vagrant
alias vup="vagrant up"
alias vssh="vagrant ssh"
alias vdstr="vagrant destroy"

# Python backed utils
alias urlencode='python -c "import sys, urllib.parse as ul; print(ul.quote_plus(sys.argv[1]));"'

# Mac aliases
alias flush="m dns flush"
alias rmds="find . -type f -name '*.DS_Store' -ls -delete"
alias dnd="killall NotificationCenter"

# Network
alias public-ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias ip="ipconfig getifaddr en0"

# GPG
alias gpgkill="gpgconf --kill gpg-agent"

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
