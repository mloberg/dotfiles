alias dotfiles="rcup"
alias set-defaults="~/.macos"

# PHP debugging
alias xon='export XDEBUG_CONFIG="idekey=PHPSTORM"'
alias xoff='unset XDEBUG_CONFIG'

# grc overides for ls
#   Made possible through contributions from generous benefactors like
#   `brew install coreutils`
if $(gls &>/dev/null); then
  alias ls="gls -F --color"
  alias l="gls -lAh --color"
  alias ll="gls -l --color"
  alias la='gls -A --color'
fi

# Pipe my public key to my clipboard.
alias pubkey="more ~/.ssh/id_rsa.pub | pbcopy | echo '=> Public key copied to pasteboard.'"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Bundler
alias be='bundle exec'
alias bi='bundle install'

# Language aliases
alias rb='ruby'
alias py='python'

alias c='clear'
alias k='clear'
alias ..="cd .."
alias ...='cd ../..'     # Go up two directories
alias ....='cd ../../..' # Go up three directories
alias -- -='cd -'        # Go back

# Tree
if [ ! -x "$(which tree 2>/dev/null)" ]; then
  alias tree="find . -print | sed -e 's;[^/]*/;|____;g;s;____|; |;g'"
fi

# Homebrew
alias bin='brew install'
alias brm='brew uninstall'

# Desktop Programs
alias chrome="open -a google\ chrome"

# Show/hide hidden files
alias showhidden="defaults write com.apple.finder AppleShowAllFiles TRUE"
alias hidehidden="defaults write com.apple.finder AppleShowAllFiles FALSE"

# Vagrant
alias vup="vagrant up"
alias vssh="vagrant ssh"
alias vdstr="vagrant destroy"

alias serve="python -m SimpleHTTPServer"

alias bt-off="m bluetooth disable"
alias bt-on="m bluetooth enable"
alias dns-flush="m dns flush"

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
